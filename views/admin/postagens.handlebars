{{!-- titulo da nossa pagina de postagens com o link de redirecionamento para a pagina de criaçao de postagens --}}
<h2>Lista de postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success ">Nova Postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descriçao: {{descricao}}</p>
            <small>Slug: {{slug}}</small><br>
            <small>categoria: {{categoria.nome}}</small><br>
            <small>Data de criaçao: {{data}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3">Editar postagem</button></a>
            <form action="/admin/postagens/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <a href=""><button class="btn btn-danger mt-3">Deletar postagem</button></a>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-4">Nenhuma postagem registrada no monmento</h4>
{{/each}}